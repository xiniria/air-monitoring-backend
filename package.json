{
  "name": "air-monitoring-backend",
  "version": "0.0.1",
  "description": "Backend for the Air Monitoring PWA project.",
  "author": "Ali Raiki & Raphaël Dhôte",
  "private": true,
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "https://gitlab.illuin.tech/3ACentrale/2020-air-monitoring-pwa/air-monitoring-backend"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "fetch-external-data:dev": "ts-node ./src/scripts/fetch-external-data/run.ts",
    "fetch-external-data:prod": "node ./dist/src/scripts/fetch-external-data/run.js",
    "format": "prettier --write \"{src,test,mig}/**/*.ts\"",
    "format:ci": "prettier --check \"{src,test,mig}/**/*.ts\"",
    "generate-entity": "npm run typeorm entity:create -- -n",
    "generate-migration": "npm run typeorm migration:create -- -n",
    "migrate": "npm run typeorm migration:run",
    "snyk:auth": "snyk auth",
    "snyk:monitor": "snyk monitor",
    "snyk:test": "snyk test",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test,mig}/**/*.[tj]s\" --fix",
    "lint:ci": "eslint \"{src,test,mig}/**/*.[tj]s\" --format stylish",
    "lockfile-lint": "lockfile-lint --path package-lock.json --type npm --validate-https --allowed-hosts npm",
    "test": "IS_TS_NODE=\"true\" jest",
    "test:watch": "IS_TS_NODE=\"true\" jest --watch",
    "test:cov": "IS_TS_NODE=\"true\" jest --coverage",
    "test:debug": "IS_TS_NODE=\"true\" node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "IS_TS_NODE=\"true\" jest --config ./test/jest-e2e.json",
    "test:e2e:ci": "npm run test:e2e -- --runInBand",
    "typeorm": "ts-node ./node_modules/typeorm/cli.js",
    "unmigrate": "npm run typeorm migration:revert"
  },
  "dependencies": {
    "@nestjs/common": "7.6.5",
    "@nestjs/core": "7.6.5",
    "@nestjs/platform-express": "7.6.5",
    "@nestjs/typeorm": "7.1.5",
    "class-transformer": "0.3.2",
    "class-validator": "0.13.1",
    "dayjs": "1.10.3",
    "node-fetch": "2.6.1",
    "pg": "8.5.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.6.3",
    "typeorm": "0.2.30"
  },
  "devDependencies": {
    "@nestjs/cli": "7.5.4",
    "@nestjs/schematics": "7.2.6",
    "@nestjs/testing": "7.6.5",
    "@types/express": "4.17.11",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.20",
    "@types/node-fetch": "2.5.7",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "4.12.0",
    "@typescript-eslint/parser": "4.12.0",
    "dotenv": "8.2.0",
    "eslint": "7.17.0",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "26.6.3",
    "lockfile-lint": "4.3.7",
    "prettier": "2.2.1",
    "snyk": "1.437.3",
    "supertest": "6.0.1",
    "ts-jest": "26.4.4",
    "ts-loader": "8.0.14",
    "ts-node": "9.1.1",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../cov",
    "testEnvironment": "node"
  }
}
